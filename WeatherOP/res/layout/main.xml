<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood_picture"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/left_day_info"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="2013-11-07"
            android:textColor="#fff"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/right_day_info"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:text="2013-11-07"
            android:textColor="#fff"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/right_weather"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/right_image"
            android:layout_marginRight="5dp"
            android:text="최고 기온: 15\n최저 기온: 5"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/left_weather"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/left_image"
            android:layout_marginLeft="5dp"
            android:text="최고 기온: 15\n최저 기온: 5"
            android:textColor="#fff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/right_day_info"
            android:layout_marginRight="5dp"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/toright_image"
        	android:layout_centerInParent="true"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/toright"
        />
        <ImageView
            android:id="@+id/left_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/left_day_info"
            android:layout_marginLeft="5dp"
            android:src="@drawable/sun" />

    </RelativeLayout>

    <TextView
        android:id="@+id/Advice_info"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:text="여기에 날씨정보를 바탕으로한 정보제공이 들어온다"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_Seashell" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/XY_info"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:gravity="bottom|center|center_vertical|top"
            android:text="성별 선택"
            android:textColor="@color/color_Seashell" />

        <ImageView
            android:id="@+id/X_image"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@+id/Y_image"
            android:src="@drawable/x_base" />

        <ImageView
            android:id="@+id/Y_image"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/y_base" />
    </RelativeLayout>

</LinearLayout>